{
  "version": "2.6",
  "project": {
    "name": "claude-code-memory",
    "collection": "claude-memory-test",
    "description": "Configuration for claude-code-memory",
    "version": "1.0.0"
  },
  "indexing": {
    "enabled": true,
    "incremental": true,
    "file_patterns": {
      "include": [
        "*.py",
        "*.pyi",
        "*.js",
        "*.jsx",
        "*.ts",
        "*.tsx",
        "*.html",
        "*.htm",
        "*.css",
        "*.md",
        "*.txt",
        "*,json"
      ],
      "exclude": [
        "*.pyc",
        "__pycache__",
        ".git",
        ".venv",
        "node_modules",
        "dist",
        "build",
        "*.min.js",
        ".env",
        "*.log",
        ".mypy_cache",
        "qdrant_storage",
        "backups",
        "chat_reports",
        "*.egg-info",
        "settings.txt",
        ".claude-indexer"
      ]
    },
    "max_file_size": 1048576,
    "parser_config": {
      "javascript": {
        "enabled": true,
        "config": {}
      },
      "markdown": {
        "enabled": true,
        "config": {}
      }
    }
  },
  "watcher": {
    "enabled": true,
    "debounce_seconds": 2.0,
    "use_gitignore": true
  }
}